{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,  // Helps to avoid some type-checking issues with node_modules
    "forceConsistentCasingInFileNames": true
  }
}
